{
  "name": "webship/cucumber",
  "description": "Cucumber Management System",
  "type": "drupal-profile",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Webship",
      "homepage": "https://www.drupal.org/webship",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "http://drupal.org/project/issues/cucumber",
    "source": "http://cgit.drupalcode.org/cucumber"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "composer/installers": "1.4.0",
    "cweagans/composer-patches": "1.6.2",
    "drupal-composer/drupal-scaffold": "2.3.0",
    "drupal/drupal-library-installer-plugin": "0.3",
    "drupal/core": "8.4.0",
    "drupal/libraries": "3.x-dev",
    "drupal/adminimal_theme": "1.3",
    "drupal/admin_toolbar": "1.20",
    "drupal/adminimal_admin_toolbar": "1.5",
    "drupal/config_update": "1.4",
    "drupal/ctools": "3.0",
    "drupal/entity": "1.0-beta1",
    "drupal/token": "1.0",
    "drupal/page_manager": "4.0-beta2",
    "drupal/panels": "4.2",
    "drupal/ds": "3.1",
    "drupal/field_group": "1.0-rc6",
    "drupal/smart_trim": "1.0",
    "drupal/pathauto": "1.0",
    "drupal/features": "3.5",
    "drupal/behat_ui": "1.x-dev"
  },
  "require-dev": {
    "drush/drush": "~9",
    "drupal/coder": "8.2.12",
    "drupal/drupal-extension": "3.3.1",
    "phing/phing": "2.16.0",
    "behat/behat": "3.4.1",
    "behat/mink": "1.7.1",
    "behat/mink-goutte-driver": "1.2.1",
    "behat/mink-zombie-driver": "1.4.0",
    "behat/mink-selenium2-driver": "1.3.1",
    "emuse/behat-html-formatter": "0.1.0"
  },
  "config": {
    "bin-dir": "bin/",
    "secure-http": false
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "post-install-cmd": [
      "@composer drupal-scaffold",
      "./bin/phing push"
    ],
    "post-update-cmd": [
      "./bin/phing push"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-8.x-1.x": "8.1.x-dev"
    },
    "installer-paths": {
      "web/core": ["drupal/core"],
      "web/profiles/{$name}": ["type:drupal-profile"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "enable-patching": true,
    "composer-exit-on-patch-failure": true
  }
}
