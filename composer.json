{
  "name": "webship/cucumber",
  "description": "Cucumber Management System",
  "type": "drupal-profile",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Webship",
      "homepage": "https://www.drupal.org/webship",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "http://drupal.org/project/issues/cucumber",
    "source": "http://cgit.drupalcode.org/cucumber"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2.0",
    "cweagans/composer-patches": "^1.6.0",
    "drupal-composer/drupal-scaffold": "^2.2.0",
    "drupal/drupal-library-installer-plugin": "~0.3",
    "drupal/core": "8.3.5",
    "drupal/uikit": "2.10",
    "drupal/uikit_admin": "2.x-dev#8e0d4d98d8de0e473d2fdd931a1f5acbe9cacc83",
    "drupal/uikit_components": "2.2",
    "drupal/uikit_gui": "1.x-dev#06e9e4ac428be66a96b9d618a5d681c516cfc294",
    "drupal/ctools": "3.0",
    "drupal/entity": "1.0-alpha4",
    "drupal/config_update": "1.3",
    "drupal/token": "1.0",
    "drupal/page_manager": "4.0-beta2",
    "drupal/panels": "4.2",
    "drupal/ds": "3.1",
    "drupal/field_group": "1.0-rc6",
    "drupal/smart_trim": "1.0",
    "drupal/pathauto": "1.0",
    "drupal/features": "3.5"
  },
  "require-dev": {
    "drush/drush": "^8.0.0",
    "drupal/drupal-extension": "^3.2",
    "drupal-composer/drupal-scaffold": "^2.0.0",
    "jakoch/phantomjs-installer": "1.9.8",
    "behat/behat": "^3.0",
    "drupal/coder": "8.*",
    "phing/phing": "^2.14",
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "behat/mink-zombie-driver": "@stable",
    "behat/mink-selenium2-driver":  "~1.3",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "guzzlehttp/guzzle": "6.2.*@stable",
    "symfony/css-selector": "~2.8",
    "squizlabs/php_codesniffer": "2.*",
    "behatch/contexts": "*",
    "emuse/behat-html-formatter": "^0.1.0"
  },
  "config": {
    "bin-dir": "bin/",
    "secure-http": false
  },
  "autoload": {
    "psr-4": {
      "Cucumber\\composer\\": "src/composer"
    }
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": ["Cucumber\\composer\\Procedures::checkComposerVersionProcedure"],
    "pre-update-cmd": ["Cucumber\\composer\\Procedures::checkComposerVersionProcedure"],
    "post-install-cmd": [
      "Cucumber\\composer\\Procedures::createRequiredFilesProcedure",
      "@composer drupal-scaffold",
      "./bin/phing push"
    ],
    "post-update-cmd": [
      "Cucumber\\composer\\Procedures::createRequiredFilesProcedure",
      "./bin/phing push"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-8.x-1.x": "8.1.x-dev"
    },
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/libraries/{$name}": ["type:drupal-library"],
      "docroot/modules/{$name}": ["type:drupal-module"],
      "docroot/profiles/{$name}": ["type:drupal-profile"],
      "docroot/themes/{$name}": ["type:drupal-theme"],
      "drush/{$name}": ["type:drupal-drush"]
    },
    "enable-patching": true
  }
}
